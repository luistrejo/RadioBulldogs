<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bulldogs.luistrejo.com.radiobulldogs" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Azul" >
        <activity
            android:name=".Login"
            android:label="@string/app_name" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".TopRatedFragment"
            android:label="@string/title_activity_top_rated_fragment" >
        </activity>
        <activity
            android:name=".GamesFragment"
            android:label="@string/title_activity_games_fragment" >
        </activity>
        <activity
            android:name=".Registro"
            android:label="@string/title_activity_registro"
            android:parentActivityName=".Login" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bulldogs.luistrejo.com.radiobulldogs.Login" />
        </activity>
        <activity
            android:name=".Acerca"
            android:label="@string/title_activity_acerca"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bulldogs.luistrejo.com.radiobulldogs.MainActivity" />
        </activity>
        <activity
            android:name=".Sugerencias"
            android:label="@string/title_activity_sugerencias"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bulldogs.luistrejo.com.radiobulldogs.MainActivity" />
        </activity>
    </application>

</manifest>
